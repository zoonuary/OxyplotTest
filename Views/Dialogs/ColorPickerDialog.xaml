<dx:ThemedWindow
    x:Class="OxyTest.Views.Dialogs.ColorPickerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
	xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    Title=""
	WindowStartupLocation="Manual"
	WindowStyle="ToolWindow"
	SizeToContent="WidthAndHeight"
	
    >
	<StackPanel Margin="0">
		<dxe:ColorEdit x:Name="ColorEditControl"/>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Button Content="OK" Margin="4, 4, 2, 4" Width="70" Click="OK_Click"/>
			<Button Grid.Column="1" Content="Cancel" Margin="2, 4, 4, 4" Width="70" Click="Cancel_Click"/>
		</Grid>
	</StackPanel>
</dx:ThemedWindow>
